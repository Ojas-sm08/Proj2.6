@model List<HospitalManagementSystem.Models.Patient>

@{
    ViewData["Title"] = "Patient Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Patient Management</h2>

<form asp-action="Manage" method="get" class="row g-3 align-items-center mb-4">
    <div class="col-md-4">
        <input type="text" name="searchString" class="form-control" placeholder="Search by name or contact" value="@ViewBag.CurrentSearchString" />
    </div>
    <div class="col-md-3">
        <select name="gender" class="form-select">
            @foreach (var g in ViewBag.Genders)
            {
                <option value="@g" selected="@(g == ViewBag.CurrentGender ? "selected" : null)">@g</option>
            }
        </select>
    </div>
    <div class="col-md-auto">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
    <div class="col-md-auto ms-auto">
        <a asp-action="Create" class="btn btn-success">Add New Patient</a>
    </div>
</form>

<table class="table table-bordered mt-3">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Date Of Birth</th>
            <th>Gender</th>
            <th>Contact Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var patient in Model)
            {
                <tr>
                    <td>@patient.Name</td>
                    <td>@patient.DateOfBirth.ToShortDateString()</td>
                    <td>@patient.Gender</td>
                    <td>@patient.ContactNumber</td>
                    <td>
                        @* This is the "View" button that connects to ProfilePreview *@
                        <a asp-action="ProfilePreview" asp-route-id="@patient.PatientId" class="btn btn-info btn-sm">View</a> |
                        <a asp-action="Edit" asp-route-id="@patient.PatientId" class="btn btn-primary btn-sm">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@patient.PatientId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center">No patients found.</td></tr>
        }
    </tbody>
</table>