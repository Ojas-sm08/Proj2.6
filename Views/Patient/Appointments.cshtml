@model List<HospitalManagementSystem.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
    Layout = "~/Views/Shared/_Layout.Patient.cshtml";
}

<h2 class="mb-4">📅 Your Appointments</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no upcoming appointments.</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Doctor</th>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
                <th>Reason</th> @* Added Reason column based on Appointment model *@
                <th>Status</th> @* Added Status column *@
            </tr>
        </thead>
        <tbody>
            @foreach (var appt in Model)
            {
                <tr>
                    <td>@appt.Doctor?.Name</td> @* Access Doctor's Name through navigation property *@
                    <td>@appt.AppointmentDateTime.ToShortDateString()</td> @* FIX: Use AppointmentDateTime for Date *@
                    <td>@appt.AppointmentDateTime.ToString(@"hh\:mm")</td> @* FIX: Use AppointmentDateTime for Time *@
                    <td>@appt.Location</td>
                    <td>@appt.Reason</td> @* Display Reason property *@
                    <td>@appt.Status</td> @* Display Status property *@
                </tr>
            }
        </tbody>
    </table>
}
