@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Management System</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalManagementSystem.styles.css" asp-append-version="true" /> @* Keep if you have project-specific CSS bundling *@
</head>
<body class="d-flex flex-column min-vh-100">
    @* Added Bootstrap classes for sticky footer *@
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">🏥 Hospital</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    @* ms-auto for right alignment, align-items-center for vertical alignment *@

                    @if (!string.IsNullOrEmpty(role) && role == "Admin")
                    {
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Patients Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Patients
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Patient" asp-action="Manage">Manage & Search Patients</a></li>
                                <li><a class="dropdown-item" asp-controller="Patient" asp-action="Notifications">Notifications</a></li>
                                <li><a class="dropdown-item" asp-controller="Patient" asp-action="ProfilePreview">Profile Preview</a></li>
                            </ul>
                        </li>

                        <!-- Doctors Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Doctors
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Doctor" asp-action="Manage">Doctor List</a></li> @* Assuming Manage is Doctor List *@
                                <li><a class="dropdown-item" asp-controller="Doctor" asp-action="Create">Add New Doctor</a></li>
                            </ul>
                        </li>

                        <!-- Appointments Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Appointments
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Appointment" asp-action="Availability">Doctor Availability</a></li> @* Changed to Availability if that's the correct action *@
                                <li><a class="dropdown-item" asp-controller="Appointment" asp-action="Create">Check Time Slot</a></li>
                            </ul>
                        </li>

                        <!-- Billing -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Bill" asp-action="Manage">Billing</a> @* Assuming Manage is the correct action for Billing *@
                        </li>
                    }
                    else if (!string.IsNullOrEmpty(role) && role == "Patient")
                    {
                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Patient Features Dropdown for Patient Role -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="patientDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Patient Features
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="patientDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Patient" asp-action="ProfilePreview">My Profile</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Patient" asp-action="Appointments">My Appointments</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Patient" asp-action="Notifications">Notifications</a></li>
                            </ul>
                        </li>
                    }

                    <!-- Login/Logout -->
                    <li class="nav-item">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm ms-3">
                                    Logout (@username) @* Display username in logout button *@
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="nav-link btn btn-outline-dark btn-sm ms-3 login-button" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Debug Info (Session Active, as seen in your example) -->
    <div class="text-center text-muted small mt-1">
        @if (!string.IsNullOrEmpty(username))
        {
            <span class="badge bg-light border text-dark">Session Active: @username (@role)</span>
        }
    </div>

    <!-- Page Content -->
    <main class="container py-4 flex-grow-1">
        @* Added flex-grow-1 to push footer down *@
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top text-center text-muted py-3 mt-auto">
        @* mt-auto for sticky footer *@
        <div class="container">
            &copy; @DateTime.Now.Year - Hospital Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> @* Keep jQuery if you use it *@
    <script src="~/js/site.js" asp-append-version="true"></script> @* Keep your custom site.js *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
