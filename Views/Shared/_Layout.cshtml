@inject IHttpContextAccessor HttpContextAccessor

@{
    string portalBrand = "Hospital";
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");

    if (!string.IsNullOrEmpty(username))
    {
        if (role == "Admin")
        {
            portalBrand = "Admin Portal";
        }
        else if (role == "Doctor")
        {
            portalBrand = "Doctor Portal";
        }
        else if (role == "Patient")
        {
            portalBrand = "Patient Portal";
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @portalBrand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://placehold.co/20x20/007bff/ffffff?text=H" alt="Hospital Logo" class="me-2 rounded-circle">
                    Hospital
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav ms-auto align-items-center">
                        

                        @if (!string.IsNullOrEmpty(username))
                        {
                            string? currentRole = Context.Session.GetString("Role");

                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark" href="#" id="patientsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Patients
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="patientsDropdown">
                                    @if (currentRole == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Patient" asp-action="Manage">Manage & Search Patients</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Patient" asp-action="Notifications">Notifications</a></li>
                                    }
                                    else if (currentRole == "Patient")
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Patient" asp-action="Dashboard">Welcome</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Patient" asp-action="Notifications">Notifications</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Patient" asp-action="ProfilePreview">My Profile</a></li>
                                    }
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark" href="#" id="doctorsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Doctors
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="doctorsDropdown">
                                    @if (currentRole == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Doctor" asp-action="Manage">Manage Doctors</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Doctor" asp-action="Create">Add New Doctor</a></li>
                                    }
                                    else if (currentRole == "Doctor")
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Doctor" asp-action="Dashboard">My Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Doctor" asp-action="Schedule">My Schedule</a></li>
                                    }
                                    else if (currentRole == "Patient")
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Appointment" asp-action="CheckAvailability">Find a Doctor</a></li>
                                    }
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark" href="#" id="appointmentsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Appointments
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="appointmentsDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Appointment" asp-action="CheckAvailability">Check Availability</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Appointment" asp-action="Create">Book Appointment</a></li>
                                    @if (currentRole == "Admin" || currentRole == "Doctor")
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Appointment" asp-action="AllAppointments">All Appointments</a></li>
                                    }
                                    else if (currentRole == "Patient")
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Appointment" asp-action="Appointments">My Appointments</a></li>
                                    }
                                </ul>
                            </li>

                            @if (currentRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Bill" asp-action="Index">Billing</a>
                                </li>
                            }

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link btn btn-link text-danger p-0 border-0 ms-3">Logout (@username)</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Hospital Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
