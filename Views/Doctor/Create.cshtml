@model HospitalManagementSystem.Models.Doctor
@{
    ViewData["Title"] = "Add Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Admin layout
}

<div class="container mt-4">
    <h2 class="mb-4">Add New Doctor</h2>

    @if (TempData["SuccessMessage"] != null) @* Changed from "Message" to "SuccessMessage" for consistency with controller TempData *@
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }


    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* Display model-level validation errors *@

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Doctor Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter doctor's full name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Specialization" class="form-label">Specialization</label>
            <input asp-for="Specialization" class="form-control" placeholder="e.g., Cardiologist" />
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>

        @* CORRECTED PROPERTIES based on the latest Doctor model (Description, Contact, Location) *@
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Experience or qualifications"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Contact" class="form-label">Contact Email/Phone</label>
            <input asp-for="Contact" class="form-control" placeholder="Email or phone number" />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Location" class="form-label">Location</label>
            <input asp-for="Location" class="form-control" placeholder="e.g., Building A, Room 101" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Add Doctor</button>
            <a asp-action="Manage" class="btn btn-secondary">Back to Doctor List</a> @* Changed from Index to Manage *@
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
