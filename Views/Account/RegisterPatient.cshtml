@model HospitalManagementSystem.Models.PatientSignUpViewModel
@{
    ViewData["Title"] = "Patient Sign Up";
    Layout = null; // Use null layout for full page control
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .register-wrapper {
            display: flex;
            width: 90%;
            max-width: 750px; /* Adjusted: Slightly larger to accommodate more form fields */
            border-radius: 1.5rem;
            overflow: hidden;
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.15);
            min-height: 550px; /* Adjusted: Increased height for more fields */
        }

        .left-panel {
            flex: 1;
            background: linear-gradient(135deg, #FF6F61, #FF9944, #5C0099, #8E2DE2);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            color: white;
            text-align: center;
            position: relative;
        }

            .left-panel .main-quote {
                font-family: 'Playfair Display', serif;
                font-size: 2rem;
                line-height: 1.2;
                font-weight: 700;
                text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.4);
                margin-bottom: 0.5rem;
            }

            .left-panel .small-quote {
                font-size: 1rem;
                line-height: 1.5;
                font-weight: 300;
                margin-top: 0;
            }

        .right-panel {
            flex: 1;
            background-color: white;
            padding: 2.5rem; /* Sufficient padding for the form */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .register-form-content {
            max-width: 350px; /* Limit form width */
            width: 100%;
        }

        .input-group-text {
            background-color: #e9ecef;
            border-color: #ced4da;
            border-right: none;
            padding: 0.5rem 0.8rem;
            border-top-left-radius: 1.5rem;
            border-bottom-left-radius: 1.5rem;
        }

        .form-control.rounded-end-pill {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            padding-left: 0.8rem;
            border-top-right-radius: 1.5rem;
            border-bottom-right-radius: 1.5rem;
        }

        .form-control {
            height: calc(2.25rem + 2px);
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
            border-radius: 0.25rem;
        }

        .form-title {
            text-align: center;
            margin-bottom: 25px;
            font-weight: bold;
            color: #343a40;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-lg {
            padding: 0.6rem 1.2rem; /* Adjusted for register button */
            font-size: 1.1rem;
            border-radius: 2rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 991.98px) {
            .register-wrapper {
                flex-direction: column;
                min-height: auto;
                width: 95%;
                max-width: 500px;
            }

            .left-panel {
                padding: 1.5rem;
                height: 180px;
            }

                .left-panel .main-quote {
                    font-size: 1.6rem;
                }

                .left-panel .small-quote {
                    font-size: 0.8rem;
                }

            .right-panel {
                padding: 2rem;
            }

            .form-title {
                font-size: 1.8rem;
            }

            .input-group-text, .form-control.rounded-end-pill {
                padding: 0.4rem 0.7rem;
                font-size: 0.85rem;
            }

            .btn-lg {
                padding: 0.5rem 1rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 575.98px) {
            .register-wrapper {
                border-radius: 1rem;
            }

            .left-panel {
                height: 150px;
                padding: 1.2rem;
            }

            .right-panel {
                padding: 1.5rem;
            }

            .register-form-content {
                max-width: 100%;
            }
        }

        /* Gradient animation */
        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }
    </style>
</head>
<body>
    <div class="register-wrapper">
        <div class="left-panel d-none d-lg-flex">
            <div class="main-quote">
                Health is the <br /> greatest gift.
            </div>
            <div class="small-quote">
                A journey of a thousand miles begins with a single step.
            </div>
        </div>

        <div class="right-panel">
            <div class="register-form-content">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                        <strong>✔</strong> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                        <strong>✖</strong> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <h3 class="form-title">Patient Sign Up</h3>

                <form asp-controller="Account" asp-action="RegisterPatient" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label visually-hidden">Full Name</label>
                        <div class="input-group rounded-pill">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="Name" type="text" class="form-control rounded-end-pill" placeholder="Full Name" required autofocus />
                        </div>
                        <span asp-validation-for="Name" class="text-danger d-block mt-1 text-start"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label visually-hidden">Date of Birth</label>
                        <div class="input-group rounded-pill">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            <input asp-for="DateOfBirth" type="date" class="form-control rounded-end-pill" required />
                        </div>
                        <span asp-validation-for="DateOfBirth" class="text-danger d-block mt-1 text-start"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label visually-hidden">Gender</label>
                        <div class="input-group rounded-pill">
                            <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                            <select asp-for="Gender" class="form-select rounded-end-pill" required>
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger d-block mt-1 text-start"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContactNumber" class="form-label visually-hidden">Contact Number</label>
                        <div class="input-group rounded-pill">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            <input asp-for="ContactNumber" type="tel" class="form-control rounded-end-pill" placeholder="Contact Number" required />
                        </div>
                        <span asp-validation-for="ContactNumber" class="text-danger d-block mt-1 text-start"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label visually-hidden">Email</label>
                        <div class="input-group rounded-pill">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" type="email" class="form-control rounded-end-pill" placeholder="Email Address" required />
                        </div>
                        <span asp-validation-for="Email" class="text-danger d-block mt-1 text-start"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Address" class="form-label visually-hidden">Address</label>
                        <div class="input-group rounded-pill">
                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                            <textarea asp-for="Address" class="form-control rounded-end-pill" placeholder="Full Address" rows="2" required></textarea>
                        </div>
                        <span asp-validation-for="Address" class="text-danger d-block mt-1 text-start"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg rounded-pill fw-bold">Sign Up</button>

                    <p class="mt-4 small text-center">
                        Already have an account? <a asp-controller="Account" asp-action="Login" asp-route-role="Patient" class="text-decoration-none">Login Here</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
